<?xml version="1.0" encoding="utf-8" ?>
<website>
  <bind name="http" ipAddresses="127.0.0.1" port="80" hostName="Sample.Site" />
  <bind name="https" ipAddresses="0.0.0.0" port="443" hostName="Safe.Sample.Site" certificateFileName="certificate.pem" />
  <setRoot fromDirectory="html" />
  <setApplication atLocation="administration" filePath="application" controlFilePath="application.socket" />
  <setPath atLocation="administration" 
           fromDirectory="administration"
           requireHttpAuthentication="digest" 
           authenticationSourceUrl="http://vlindos:password@vlindos/authentication/Webserver.Website.SampleSite" />
  <saveAccessLog toFilePath="access.log" />
</website>
